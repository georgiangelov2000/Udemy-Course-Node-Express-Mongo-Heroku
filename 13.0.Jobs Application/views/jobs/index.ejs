<%- include('../partials/header') -%>
<div class="container">
<h1 class="text-center">Announcements</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Company</th>
      <th scope="col">postingDate</th>
      <th scope="col">lastDate</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <% jobs.forEach((job,index)=>{ %>
  <tbody>
    <tr>
      <td style="width: 16.66%; vertical-align: inherit; text-align: center;"><%= job.title %></td>
      <td style="width: 16.66%; vertical-align: inherit; text-align: center;"><%= job.company %></td>
      <td style="width: 16.66%; vertical-align: inherit; text-align: center;"><%= job.postingDate %></td>
      <td style="width: 16.66%; vertical-align: inherit; text-align: center;"><%= job.lastDate %></td>
      <td style="vertical-align: inherit;">
        <div class="row">
          <div class="col-md-3">
            <a href="#" class="btn btn-success">Apply</a>
          </div>
          <div class="col-md-3">
            <a href="#" class="btn btn-primary">Details</a>
          </div>
          <div class="col-md-3">
            <a href="/api/v1/job/<%= job.id %>"  class="btn btn-dark" >Edit</a>
          </div>
          <div class="col-md-3">
            <form action="/api/v1/job/<%= job.id %>?_method=DELETE" method="POST">
              <div class="form-group">
                <input type="hidden" name="_method" value="DELETE">
                <input class="btn btn-danger" type="submit" value="Delete">
              </div>
            </form>
          </div>
        </div>
      </td>
    </tr>
  </tbody>
  <% }) %>
</table>
</div>

<%- include('../partials/footer') -%>
