<%- include('../partials/header') -%>
<div class="container">
<h1 class="text-center">Announcements</h1>
<% if(jobs){ %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Company</th>
        <th scope="col">postingDate</th>
        <th scope="col">lastDate</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <% jobs.forEach((job,index)=>{ %>
    <tbody>
      <tr>
        <td style="width: 16.66%; vertical-align: inherit;"><h5> <%= job.title %> </h5> </td>
        <td style="width: 16.66%; vertical-align: inherit;"> <h6><%= job.company %></h6 ></td>
        <td style="width: 16.66%; vertical-align: inherit;"><h6><%= job.postingDate %></h6></td>
        <td style="width: 16.66%; vertical-align: inherit;"><h6><%= job.lastDate %></h6></td>
        <td style="vertical-align: inherit;">
          <div class="row">
            <div class="col-xl-3  col-md-12 col-sm-12  ">
              <a href="/api/v1/job/details/<%= job.id %>" class="btn btn-primary">Details</a>
            </div>
            <div class="col-xl-3  col-md-12 col-sm-12 ">
              <a href="/api/v1/job/<%= job.id %>"  class="btn btn-dark" >Edit</a>
            </div>
            <div class="col-xl-3  col-md-3 col-sm-12 ">
              <form action="/api/v1/job/<%= job.id %>?_method=DELETE" method="POST">
                <div class="form-group">
                  <input type="hidden" name="_method" value="DELETE">
                  <input class="btn btn-danger" type="submit" value="Delete">
                </div>
              </form>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
    <% }) %>
  </table>
  </div>
<%} else { %>
  <h1>Not found job offers</h1>
<% } %>


<%- include('../partials/footer') -%>
