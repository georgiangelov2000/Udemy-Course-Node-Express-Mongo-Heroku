<%- include('../partials/header') -%>
<%- include('../partials/messages') -%>
    <div class="container">
      <h1 class="text-center">Edit Job</h1>
        <form action="/api/v1/job/<%= job.id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" value="<%= job.title %>" placeholder="Enter title" name="title">
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <input type="text" class="form-control" id="description" value="<%= job.description %>" placeholder="Enter description" name="description">
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" value="<%= job.email %>" placeholder="Enter email" name="email">
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" value="<%= job.address %>" placeholder="Enter address" name="address">
            </div>
            <div class="form-group">
                <label for="company">Company</label>
                <input type="text" class="form-control" id="company" value="<%= job.company %>" placeholder="Enter company" name="company">
            </div>
              <div class="form-group">
                <label for="salary">Salary</label>
                <input type="text" class="form-control" id="salary" value="<%= job.salary %>" placeholder="Enter salary " name="salary">
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
<%- include('../partials/footer') -%>

