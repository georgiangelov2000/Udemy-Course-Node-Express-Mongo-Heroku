<%- include('../partials/header') -%>

<div class="col-9 m-auto">
  <div class="container p-3 w-100">
    <table
      class="table table-bordered"
      id="dataTable"
      width="100%"
      cellspacing="0"
    >
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </tfoot>

      <tbody>
        <% products.forEach((product)=>{ %>
        <tr>
          <td>
            <img src=" <%= product.imageUrl %>" class="img-fluid" alt="Responsive image">
          </td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td class="text-center">
            <div class="row">
              <div class="col-md-6">
                <a href="/product/update/<%= product.id %>" class="btn btn-primary">
                    <span>Edit</span>
                </a>
              </div>
              <div class="col-md-6">
                <form action="/product/delete/<%= product.id %>?_method=DELETE" method="POST">
                  <div class="form-group">
                    <input type="hidden" name="_method" value="DELETE">
                    <input class="btn btn-danger" type="submit" value="Delete">
                  </div>
                </form>
              </div>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<%- include('../partials/footer') -%>
