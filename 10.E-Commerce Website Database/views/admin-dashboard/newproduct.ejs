<%- include('../partials/header') -%>

<div class="container">
  <%- include('../partials/messages') -%>
  <h1 class="text-center">New Product</h1>
<form action="/product/new" method="POST" enctype = " multipart / form-data " >
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">Upload</span>
    </div>
    <div class="custom-file">
      <input type="file" class="custom-file-input" id="imageUrl" name="imageUrl">
      <label class="custom-file-label" for="imageUrl">Choose file</label>
    </div>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name"  name="name" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label for="designation">Description</label>
    <input type="text" class="form-control" id="description" name="description" placeholder="Enter description">
  </div>
  <div class="form-group">
      <label for="price">Price</label>
      <input type="text" class="form-control" id="price" name="price" placeholder="price">
    </div>
  <button type="submit" class="btn btn-primary  btn-lg btn-block ">Submit</button>
</form>
</div>
<%- include('../partials/footer') -%>
