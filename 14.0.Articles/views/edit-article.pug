extends layout

block content
  h1 Edit Article 
  form(method='POST' action='/articles/edit/'+article._id)
    label(for='title') Title
    input(type='text' name='title' value=article.title )
    label(for='body') Body
    input(type='text' name='author' value=article.author disabled='disabled' )
    label(for='body') Body
    textarea(name='body')=article.body
    input(type='submit' value='submit' )
