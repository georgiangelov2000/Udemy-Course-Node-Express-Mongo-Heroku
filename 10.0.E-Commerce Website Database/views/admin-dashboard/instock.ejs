<%- include('../partials/header') -%>

  <div class="container p-3 w-100">
    <h1 class="text-center">My Actions</h1>
    <table
      class="table table-hover"
      id="dataTable"
      width="100%"
      cellspacing="0"
    >
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </tfoot>

      <tbody>
        <% products.forEach((product)=>{ %>
         <% if(currentUser.id==product.author) { %>
          <tr>
            <td class="text-center">
              <img src="<%= product.imageUrl %>" class="img-fluid" alt="Responsive image">
            </td>
            <td><%= product.name %></td>
            <td class="text-center">
              <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 mb-2">
                  <a href="/product/update/<%= product.id %>" class="btn btn-primary">
                      <span>Edit</span>
                  </a>
                </div>
                <div class="col-xl-12 col-md-12 col-sm-12">
                  <form action="/product/delete/<%= product.id %>?_method=DELETE" method="POST">
                    <div class="form-group">
                      <input type="hidden" name="_method" value="DELETE">
                      <input class="btn btn-danger" type="submit" value="Delete">
                    </div>
                  </form>
                </div>
                <div class="col-xl-12 col-md-12 col-sm-12">
                  <a href="/product/details/<%= product.id %>" class="btn btn-dark stretched-link">Details</a>
                </div>
              </div>
            </td>
          </tr>
         <% } else { %>

         <% } %>
        
        <% }) %>
      </tbody>
    </table>
  </div>
<%- include('../partials/footer') -%>
