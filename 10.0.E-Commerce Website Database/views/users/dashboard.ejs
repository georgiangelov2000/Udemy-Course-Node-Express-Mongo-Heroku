<%- include('../partials/header') -%>
<div class="container">
  <%- include('../partials/messages') -%>

  <h2 class="text-center text-danger">Admin Dashboard</h2>

  <div class="row">
    <div class="col-xl-2 col-sm-2">
      <%- include('../partials/sidebar') -%>
    </div>

    <div class="col-xl-10 col-sm-10 d-flex flex-wrap flex-wrap align-items-center mb-5">
      <table
        class="table table-hover"
        id="dataTable"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </tfoot>

        <tbody>
          <% products.forEach((product)=>{ %>
            <% if(currentUser.id==product.author) { %>
              <tr>
                <td class="text-center">
                  <img
                    src="<%= product.imageUrl %>"
                    class="img-fluid w-10"
                    alt="Responsive image"
                  />
                </td>
                <td class=" text-center" ><%= product.name %></td>
                <td>
                  <a href="/product/details/<%= product.id %>" class="btn btn-dark stretched-link">Details</a>
                </td>
              </tr>
           <% } else { %>

           <% } %>
         
          <% }) %>
        </tbody>
      </table>

    </div>

  </div>

  <%- include('../partials/footer') -%>
</div>
